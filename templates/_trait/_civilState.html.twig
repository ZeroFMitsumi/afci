{% extends 'form.html.twig' %}

{% block form %}
<section class="row justify-content-center p-2 rounded-4 my-3">
    <div class="col-3 border border-bottom-0 border-top-0 m-3">
        <h1>Etat Civile</h1>
        {{ form_errors(form) }}

        {{ form_start(form) }}
            {{ form_row(form.birthname) }}
            {{ form_row(form.nationality) }}
            {{ form_row(form.birthday) }}
            {{ form_row(form.city) }}
            {{ form_row(form.zipcode) }}
            {{ form_row(form.country) }}
            {{ form_row(form.socialsecuritynumber) }}
            {{ form_row(form.cpam) }}
            {{ form_row(form.man) }}
            {{ form_row(form.woman) }}
            {{ form_row(form.maried) }}
            {{ form_row(form.single) }}
            {{ form_row(form.children) }}
            <button type="submit" class="btn">Enregistrer</button>
        {{ form_end(form) }}
    </div>
</section>
{% endblock %}